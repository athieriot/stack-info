{
    "name": "__MSG_appName__",
    "version": "0.0.3",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "64": "images/stackoverflow-64.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "https://api.stackexchange.com/",
        "alarms",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
            "19": "images/stackoverflow-19.png"
        },
        "default_title": "stack-info",
        "default_popup": "popup.html"
    },
    "options_page": "options.html"
}