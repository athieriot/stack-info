{
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "short_name": "stack-info",
  "version": "0.0.4",
  "default_locale": "en",
  "description": "__MSG_appDescription__",
  "icons": {
    "64": "images/stackinfo-64.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/stackinfo-19.png"
    },
    "default_title": "stack-info",
    "default_popup": "popup.html"
  },
  "author": "Aur√©lien Thieriot",
  "background": {
    "scripts": [
      "scripts/common.js",
      "scripts/background.js"
    ],
    "persistent": false
  },
  "homepage_url": "https://github.com/athieriot/stack-info",
  "options_page": "options.html",
  "permissions": [
    "https://api.stackexchange.com/",
    "alarms",
    "tabs",
    "storage"
  ],
  "externally_connectable": {
    "matches": [
      "https://oauth.io/*"
    ]
  }
}
